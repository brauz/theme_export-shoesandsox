<div class="flex items-center justify-between mb-2 lg:mb-5 mt-6">
    <div class="hidden">
        <p class="hidden">
            <span id="drop_areas" data-selector="selected-size-schema" class="hidden"></span>
            <span id="arrow-areas" class="hidden"></span>
            <div id="areas_box" class="hidden"></div>
        </p>
    </div>
    <div class="flex flex-wrap items-center gap-x-4">
      <p id="product-sizeguide" class="m-0 text-accent-1 text-sm font-normal leading-x22 underline cursor-pointer flex flex-wrap items-center">{% render 'icon-rule', class: 'w-4 h-4' %} Size Guide</p>
      {%- if product.metafields.utopia.fit_tips != blank -%}
        <p id="product-tips-btn" class="m-0 text-accent-1 text-sm font-normal leading-x22 underline cursor-pointer flex flex-wrap items-center gap-x-1.5">{% render 'icon-questions', class: 'w-4 h-4' %} Fit Tips</p>
    	{%- endif -%}
    </div>
</div>

<div class="mb-0 md:mb-5 last:mb-0">
    <fieldset class="size-container w-full flex flex-wrap items-center justify-start gap-2">
        {% for variant in product.variants %}
            <div class="size-item relative w-[57px] rounded-sm h-12 {% if variant.available == false %}disabled{% endif %}" >
                <input 
                    value="{{ variant.option1 }}"
                    type="radio"
                    name="variant-size"
                    class="size-custom absolute inset-0 !block !w-full !h-full z-10 !rounded-none opacity-0 cursor-pointer m-0 {% if variant.available == false %}disabled{% endif %}"
                >
                    <label
                        class="label-size absolute inset-0 w-full rounded-sm h-12 border-0 overflow-hidden flex items-center justify-center uppercase bg-size-bg text-grey-900 font-bold text-sm leading-x14 flex-col gap-0.5 hover:bg-secondary hover:text-white"
                    >
                            <span 
                            class=""
                        >
                            {{ variant.option1 }}
                        </span>
                    </label>
                </input>
            </div>
        {% endfor %}
    </fieldset>
</div>