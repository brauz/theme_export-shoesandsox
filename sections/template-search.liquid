<div class="pt-0 md:pt-8 pb-6 md:py-x72 px-0 md:px-4 xl:px-20">
  <div class="max-w-full mx-auto">
    <!-- Title -->
    {% if search.performed == false %}
      <div class="pb-4 md:pb-6 px-4 md:px-0">
        <div class="text-left">
          <h1 class="text-2xl md:text-3xl font-bold text-grey-900 m-0">Search Results</h1>
        </div>
        <a href="#" class="hidden mt-3 text-base font-normal didyoumean" data-selector="didYouMean">
          Show results for <span></span> instead
        </a>
      </div>
      {% else %}
      <div class="pb-4 md:pb-6 px-4 md:px-0">
        <div class="text-left">
          <h1 class="text-2xl md:text-3xl font-bold text-grey-900 m-0">
            Search results for: "{{ search.terms | escape }}"
          </h1>
          <a href="#" class="hidden mt-3 text-base font-normal didyoumean" data-selector="didYouMean">
            Show results for <span></span> instead
          </a>
        </div>
      </div>
    {% endif %}
    <!-- List product -->
    <div class="border-b border-solid border-border-default h-px w-full"></div>
    <div id="searchspring-init" class="md:mt-8"></div>
  </div>
</div>

{% schema %}
  {
    "name": "template-search",
    "settings": []
  }
{% endschema %}